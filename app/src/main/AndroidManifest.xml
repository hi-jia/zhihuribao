<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.hfzy">

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />


    <uses-permission android:name="android.permission.INTERNET" />


    <application
        android:name="org.hfzy.globle.MyAplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="org.hfzy.ui.activity.Splash"
            android:label="知乎日报">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.hfzy.ui.activity.DetailPager" />
        <activity android:name="org.hfzy.ui.activity.MainActivity" />
        <activity
            android:name="org.hfzy.ui.activity.LoginActivity"
            android:label="@string/title_activity_login"></activity>
    </application>

</manifest>